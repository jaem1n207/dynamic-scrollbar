{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "baseUrl": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2016",
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "paths": {
      "pages/*": ["./pages/*"],
      "widgets/*": ["./widgets/*"],
      "features/*": ["./features/*"],
      "entities/*": ["./entities/*"],
      "shared/*": ["./shared/*"]
    },
    "typeRoots": ["node_modules/@types", "src/shared/types"]
  },
  "exclude": ["release", "dev", "prod", "commitlint.config.mjs"]
}
