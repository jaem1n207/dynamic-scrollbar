{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "baseUrl": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "lib": ["ES2017", "ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2017",
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "paths": {
      "pages/*": ["./pages/*"],
      "widgets/*": ["./widgets/*"],
      "features/*": ["./features/*"],
      "entities/*": ["./entities/*"],
      "shared/*": ["./shared/*"]
    },
    "typeRoots": ["node_modules/@types", "src/shared/types"]
  },
  "exclude": ["release", "dev", "prod", "commitlint.config.mjs"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      // https://bobbyhadz.com/blog/typescript-uncaught-referenceerror-exports-is-not-defined#nodejs---referenceerror-exports-is-not-defined
      // https://webpack.js.org/guides/ecma-script-modules/#flagging-modules-as-esm
      "module": "CommonJS"
    }
  }
}
